    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ThreadSaftyServlet</servlet-name>
    <servlet-class>com.helloweenvsfei.servlet.ThreadSaftyServlet</servlet-class>
  </servlet>










  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/servlet/FirstServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RequestServlet</servlet-name>
    <url-pattern>/servlet/RequestServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IdentityServlet</servlet-name>
    <url-pattern>/servlet/IdentityServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
