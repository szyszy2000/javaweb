    <url-pattern>/servlet/RedirectServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ThreadSaftyServlet</servlet-name>
    <url-pattern>/servlet/ThreadSaftyServlet</url-pattern>
  </servlet-mapping>
  
  <!-- 下面是资源配置 -->
  <env-entry>
  	<env-entry-name>hello</env-entry-name>
  	<env-entry-type>java.lang.String</env-entry-type>
  	<env-entry-value>Hello, Welcome to the JavaEE Resource Injection.</env-entry-value>
  </env-entry>
